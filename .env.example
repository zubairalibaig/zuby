# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=false

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost
API_VERSION=v1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zuby_dev
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_DIALECT=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOGGING=false

# Alternative MongoDB configuration (if using MongoDB)
# MONGODB_URI=mongodb://localhost:27017/zuby_dev
# MONGODB_USERNAME=admin
# MONGODB_PASSWORD=your_secure_password

# ============================================================================
# AUTHENTICATION SERVICE
# ============================================================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key
REFRESH_TOKEN_EXPIRY=30d
SESSION_SECRET=your_session_secret_key
BCRYPT_ROUNDS=10

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# ============================================================================
# PAYMENT SERVICE
# ============================================================================
# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Other Payment Gateway Configuration
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Payment Settings
PAYMENT_CURRENCY=USD
PAYMENT_TIMEOUT=60000

# ============================================================================
# DELIVERY SERVICE
# ============================================================================
# Delivery Provider Configuration
DELIVERY_PROVIDER=fedex
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number
FEDEX_METER_NUMBER=your_fedex_meter_number
FEDEX_KEY=your_fedex_key
FEDEX_PASSWORD=your_fedex_password

# Alternative Delivery Providers
# UPS_ACCOUNT_NUMBER=your_ups_account_number
# UPS_LICENSE_NUMBER=your_ups_license_number
# UPS_API_KEY=your_ups_api_key
# USPS_API_KEY=your_usps_api_key

# Delivery Settings
DELIVERY_API_TIMEOUT=30000
DELIVERY_WEBHOOK_SECRET=your_delivery_webhook_secret

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Email Service
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@zuby.com
EMAIL_FROM_NAME=Zuby Team

# Twilio Configuration (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration (S3 for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=zuby-uploads
AWS_S3_URL_EXPIRY=3600

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ENABLED=true

# ============================================================================
# SECURITY & CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CACHE & REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# ============================================================================
# APPLICATION SPECIFIC
# ============================================================================
APP_NAME=Zuby
APP_VERSION=1.0.0
TIMEZONE=UTC
